<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Id>MediatR.Pipeline.Cancellation</Id>
    <Authors>Ledjon Behluli</Authors>
    <Company>Ledjon Behluli</Company>
    <Copyright>Copyright Â© 2021 Ledjon Behluli</Copyright>
    <Title>Handles canceled requests gracefully.</Title>
    <Summary>MediatR pipeline that handles canceled requests gracefully.</Summary>
    <Description>MediatR pipeline that handles canceled requests gracefully.</Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RepositoryUrl>https://github.com/ledjon-behluli/MediatR.Pipeline.Cancellation/</RepositoryUrl>
    <PackageProjectUrl>https://github.com/ledjon-behluli/MediatR.Pipeline.Cancellation/</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RequireLicenseAcceptance>false</RequireLicenseAcceptance>
    <PackageTags>MediatR, Pipeline, Cancellation, Graceful</PackageTags>
    <PackageIcon>icon.png</PackageIcon>
    <AssemblyVersion>1.0.1</AssemblyVersion>
    <FileVersion>1.0.1</FileVersion>
    <Version>1.0.1</Version>
    <PackageReleaseNotes>Included XML documentation.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MediatR" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
